{
  "name": "fe-infinity",
  "productName": "FE Infinity",
  "author": {
    "name": "neon",
    "url": "https://www.neon.engineer/"
  },
  "version": "1.0.0",
  "description": "Electron wrapper for FE Infinity",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd ../client && pnpm dev\" \"wait-on http://localhost:3000 && electron . --dev\"",
    "postinstall": "electron-builder install-app-deps && node download-binaries.js",
    "generate-icons": "electron-icon-builder --input=../client/public/fe-infinity-logo.png --output=icons",
    "build:client": "cd ../client && pnpm build",
    "package": "npm run build:client && electron-builder",
    "package:mac": "npm run build:client && electron-builder --mac",
    "package:win": "npm run build:client && electron-builder --win",
    "package:linux": "npm run build:client && electron-builder --linux"
  },
  "devDependencies": {
    "axios": "^1.6.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "extract-zip": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.fe-infinity.app",
    "productName": "FE Infinity",
    "files": [
      "*.js",
      "*.html",
      "node_modules/**/*",
      "bin/**/*"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      },
      {
        "from": "../lt-maker-fork",
        "to": "lt-maker-fork",
        "filter": [
          "**/*",
          "!__pycache__/**/*"
        ]
      },
      {
        "from": "../client/out",
        "to": "client/out",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games",
      "icon": "icons/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "icon": "icons/icons/png/512x512.png"
    }
  }
}